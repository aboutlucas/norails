	<h1 id="page_title" class="page_title">Diga Ol√°</h1>

	<div class="skinny_wrapper wrapper_padding">
		<%= form_for @contact do |f|  %>
				<%= f.label :name %> <br>
				<%= f.text_field :name, required: true %>

				<%= f.label :email %> <br>
				<%= f.email_field :email, required: true %>

				<%= f.label :message %> <br>
				<%= f.text_area :message, as: :text %>

				<div class="hidden">
					<%= f.label :nickname %> <br>
					<%= f.text_field :nickname, hint: 'Sair daqui' %>
				</div>

				<%= f.submit 'Enviar Mensagem', class: "button" %>
		<% end %>
	</div>